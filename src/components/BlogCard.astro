---
const { id } = Astro.props
---

<div class="card" id=`post-${id}`>
  <div class="box">
    <div class="content">
       <div class="iconBox relative h-[70px]">
          <div class="iconItem absolute flex items-center justify-center w-[60px] h-[60px] left-[5px] top-[5px] bg-red-500 rounded-2xl z-20 text-4xl">
            {id}
          </div>
          <div class="absolute left-[70px] h-[70px] bg-red-200 w-auto flex items-center justify-center">
            title
          </div>
       </div>
       content
    </div>
  </div>
</div>


<style>

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
  color: white;
}


.card {
  position: relative;
  width: 400px;
  height: 200px;
  background-color: aqua;
  border-radius: 15px;
  overflow: hidden;
}

.card .box {
  position: absolute;
  inset: 10px;
  background-color: #000000;
  border-radius: 10px;
}

.card .box .content {
  position: absolute;
  width: 70px;
  height: 70px;
  background-color: aqua;
  border-bottom-right-radius: 15px;
  transition: 0.5s;
  z-index: 10;
}

.card .box .content::before {
  content: '';
  position: absolute;
  bottom: -15px;
  left: 0;
  width: 15px;
  height: 15px;
  background-color: 000000;
  border-top-left-radius: 15px;
  box-shadow: -5px -5px 0 5px aqua;
}

.card .box .content::after {
  content: '';
  position: absolute;
  top: 0;
  right: -15px;
  width: 15px;
  height: 15px;
  background-color: 000000;
  border-top-left-radius: 15px;
  box-shadow: -5px -5px 0 5px aqua;
}


</style>