---
import { getCollection } from "astro:content"
import BlogLayout from "@/layouts/BlogLayout.astro"
import BlogCard from "@/components/BlogCard.astro"
import BlogAside from "@/components/BlogAside.astro"

export function getStaticPaths() {
  return [
    { params: { pageLang: 'en' } },
    { params: { pageLang: 'es' } },
    { params: { pageLang: 'ca' } },

  ]
}

const projects = await getCollection('posts')
---

<BlogLayout title="Blog" description="SEO description for blog section">
  
  <section id="header">
    a
  </section>

  <section id="aside">
    <BlogAside />
  </section>

  <section id="content" class="grid grid-cols-1 xl:grid-cols-2 grid-flow-row place-items-center gap-y-6 overflow-x-hidden">
    {
      projects.map((project) => (
        <BlogCard id={project.data.id} />
      ))
    }
  </section>

</BlogLayout>
