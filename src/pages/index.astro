<style is:global>

	:root {
		--text-color-dark-primary: #D1D5DB;
		--text-color-dark-secondary: #737373;
	}

	body {
		background-color: #111111;
		width: 100vw;
		height: 100vh;
		overflow: hidden;
		display: grid;
		grid-template-columns: repeat(10, 1fr);
		grid-template-rows: repeat(4, 1fr);
		padding: 2.5rem;
		gap: 2rem;
		color: var(--text-color-dark-primary);
	}

	body > section {
		overflow: hidden;
		background-color: #171717;
		border-radius: 8px;
		border-width: 1px;
		border-color: #2C2C2C;
		padding: 2rem;
	}

	#personal {
		grid-column: span 7;
		grid-row: span 2;
	}

	#projects {
		grid-column: 8 / span 3;
		grid-row: span 3;
	}

	#work {
		grid-column: span 3;
		grid-row: 3 / span 2;
	}

	#tools {
		grid-column: 4 / span 4;
		grid-row: 3;
	}

	#portfolio {
		grid-column: 4 / span 2;
		grid-row: 4;
	}

	#timezone {
		grid-column: 6 / span 2;
		grid-row: 4;
	}

	#blog {
		grid-column: 8 / span 3;
		grid-row: 4;
	}



</style>
