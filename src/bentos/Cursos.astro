---
import TitleComponent from "../components/TitleComponent.astro"
import CursosComponent from "../components/CursosComponent.jsx"

import { getI18N } from '../i18n';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<div class="flex flex-col">
    <TitleComponent title={i18n?.BENTO_TITLES.COURSES}/>    
    <CursosComponent currentLocale={currentLocale} client:load />
</div>