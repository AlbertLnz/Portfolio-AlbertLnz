---
import Info from "../icons/Info.astro";

const language = Astro.currentLocale
let path

if(language === 'en') path = '/en/portfolio'
if(language === 'es') path = '/es/portfolio'
if(language === 'ca') path = '/ca/portfoli'

---

<a href={path} class="flex w-full h-full items-center justify-center gap-3 hover:bg-indigo-600/10 duration-300 hover:rounded-[10px]" title="Page Info Portfolio">
    <Info class="size-8 ml-2 md:ml-0"/>
    Info portfolio
</a>