---
import HighlightText from "../icons/HighlightText.astro"

import { getI18N } from '../i18n';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<p>
    {i18n?.SLOGAN.text1} - 
    <mark class="relative inline-block font-bold mx-1">
        <span class="relative z-10 inline-block">
            {i18n?.SLOGAN.text2}
        </span>
        <HighlightText color="#FFBB64" />
    </mark>.
</p>
<p>
    <mark class="relative inline-block font-bold">
        <span class="relative z-10 inline-block">
            {i18n?.SLOGAN.text3}
        </span>
        <HighlightText color="#DCFFB7"/>
    </mark>
    , {i18n?.SLOGAN.text4}. 
</p>

<style>
    mark {
	    background: none;
    }
</style>