---
import '@/layouts/layout_desktop.css'
import '@/layouts/layout_mobile.css'
import { ViewTransitions } from 'astro:transitions'

interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta charset="UTF-8" />
    <ViewTransitions />
	</head>
	<body>
    <slot />
	</body>
</html>

<style is:global>
  /* Temporal Font-Family - outfit-latin-wght-normal */
  @font-face {
    font-family: 'Outfit Variable';
    font-style: normal;
    font-display: swap;
    font-weight: 100 900;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/outfit:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
    unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
  }
  
  :root {
    --text-color-dark-primary: #d1d5db;
    --text-color-dark-secondary: #737373;
  }

  body {
    background-color: #111111;
    overflow: hidden;
    display: grid;
    color: var(--text-color-dark-primary);
    font-size: 12px;
  }

  body > section {
    font-family: 'Outfit Variable', sans-serif;
    overflow: hidden;
    background-color: #171717;
    border-radius: 8px;
    border-width: 1px;
    border-color: #2c2c2c;
    padding: 2rem;
  }

</style>
